<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <a class="pull-right" href="/users/password/new">Forgot password?</a>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= f.fields_for(@full_profile) do |ff| %>
    <div>
      <%= ff.label :proposal_comments %>
      <%= ff.text_field :proposal_comments %>
    </div>
    <div>
      <%= ff.label :interests %>
      <%= ff.text_field :interests %>
    </div>
    <div>
      <%= ff.label :associations %>
      <%= ff.text_field :associations %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
