<h1>Search Results</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<h1>Events</h1>
<ul>
  <% @events.each do |event| %>
    <li>
      <h3>
        <%= link_to event.name, controller: "events", action: "show", id: event._id%>
      </h3>
    </li>
  <% end %>
</ul>

<h2>Job Posts</h2>
<ul>
  <% @job_posts.each do |job_post| %>
    <li>
      <h3>
        <%= link_to job_post.title, controller: "job_posts", action: "show", id: job_post._id%>
      </h3>
    </li>
  <% end %>
</ul>
