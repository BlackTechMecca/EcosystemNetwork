<div class="container">
  <style type="text/css">
    td {
      padding-top: .5em;
      padding-right: .5em;
      padding-bottom: .5em;
    }

    tr:nth-child(even) {
      background-color: #fafafa;
    }
    th {
      text-align: left;
    }
  </style>
  <p id="notice"><%= notice %></p>

  <h1>Listing Job Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Poster</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @job_posts.each do |job_post| %>
        <tr>
          <td><%= link_to "#{job_post.title}", job_post %></td>
          <td><%= job_post.description %></td>
          <td><%= job_post.date.strftime("%B %d, %Y") %></td>
          <td><%= link_to "#{job_post.poster_name}", job_post.user %></td>
          <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
          <td><%= link_to 'Destroy', job_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Job post', new_job_post_path %>
</div>
